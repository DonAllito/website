<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>دسته ها</h2>
    <div class="btn-group">
        <a href="/admin/categories/create" class="btn btn-sm btn-danger">افزودن دسته جدید</a>
        <a href="/admin/courses" class="btn btn-sm btn-outline-info">پست ها</a>
    </div>
</div>
<div class="table-responsive table-active">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>عنوان دسته</th>
            <th>نوع</th>
            <th>تنظیمات</th>
        </tr>
        </thead>
        <tbody>
        <% categories.docs.forEach(category => { %>
        <tr>
            <td><a href="/posts" class="text-dark"><%= category.name %></a></td>
            <td><%= category.parent ? category.parent.name : 'دسته اصلی' %></td>
            <td>
                <form action="/admin/categories/<%= category.id %>?_method=DELETE" method="post">
                    <div class="btn-group btn-group-sm">
                        <a href="/admin/categories/<%= category.id %>/edit"  class="btn btn-danger">ویرایش</a>
                        <button type="submit" class="btn btn-info">حذف</button>
                    </div>
                </form>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>

    <%- include(viewPath('layouts/pagination') ,{ pagination : categories}) %>
</div>
    
    